	<!-- End CSS Files #0e90d2 -->

	<style>
		.modal-style{
			display: none;
			position: fixed;
			z-index: 1;
			padding-top: 100px;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			overflow: auto;
			background-color: rgb(0,0,0);
			background-color: rgba(0,0,0,0.4);
		}
		.modal-content {
			background-color: #005c99;
			margin: auto;
			padding: 20px;
			border: 1px solid #888;
			width: 30%;
		}
		.cart-popup {
			display: none;
			background-color: rgba(34,34,34, 0.95);
			width: 300px;
		}
		.responsive {
			width: 100%;
			height: auto;
		}
		.form{
			background-color: #0f3e68;
			color: white;
			width:100%;
			height: auto;
			padding:15px 15px 12px;
			font-size:18px;
			margin-bottom:18px;
			letter-spacing: 0.5px;
			border: none;
		}
		.textarea {
			height: 201px;
			max-width: 100%;
			max-height: 201px;
		}
		.tab-text, label{
			color: white;
		}
		.contact-soft{
			width:90%;
			max-width: 770px;
			padding:52px;
			background-color: #0f3e68;
			color:#e7e7e7;
			margin:0 auto;
		}

	</style>

	{% block stylesheets %}
	{% endblock %}

</head>

<body class="dark-layout parallax">


	<!-- Page Loader -->
	<section id="pageloader">
		<div class="outter colored-border">
			<div class="mid colored-border"></div>
		</div>
	</section>



	<!-- Navigation -->
	<nav id="navigation-sticky" class="first-nav dark-nav">
		<!-- Navigation Inner -->
		<div class="nav-inner">
			<div class="logo">
				<!-- Navigation Logo Link -->
				<a href="#home" class="scroll">
					<!-- Your Logo -->
					<img src="{{ asset('uploads/logo.png') | imagine_filter('logo') }}" class="site_logo" alt="North Logo"/>
				</a>
			</div>
			<!-- Mobile Menu Button -->
			<a class="mobile-nav-button colored"><i class="fa fa-bars"></i></a>
			<!-- Navigation Menu -->
			<div class="nav-menu clearfix semibold">
				<ul class="nav uppercase oswald">
					<li><a href="#home" class="scroll">{{ homeTitle }}</a></li>
					<li class="dropdown-toggle nav-toggle" ><a href="#review" class="scroll">{{ reviewTitle }}<b data-toggle="dropdown"></b></a>
						<!-- DropDown Menu -->
						<ul class="dropdown-menu uppercase gray-border clearfix">
							<li><a href="#design" class="scroll">{{ designTitle }}</a></li>
							<li><a href="#photography" class="scroll">{{ photographyTitle }}</a></li>
							<li><a href="#videography" class="scroll">{{ videographyTitle }}</a></li>
							<li><a href="#battery" class="scroll">{{ batteryTitle }}</a></li>
						</ul>
						<!-- End DropDown Menu -->
					</li>
					<li><a href="#gallery" class="scroll">{{ galleryTitle }}</a></li>
					<li><a href="#products" class="scroll">{{ productTitle }}</a></li>
					<li><a href="#comments" class="scroll">{{ commentTitle }}</a></li>
					<li><a href="#contact" class="scroll">{{ contactTitle }}</a></li>
					<li>
						<a id="cart" {# href="{{ path("cart", {cartId: cartId, locale: language.locale}) }}"#} onclick="gotoCart()" class="dropdown-toggle nav-toggle">
							<i class="bi bi-cart-plus-fill"></i><b data-toggle="dropdown"></b>
						</a>
						<ul id="cart-popup" class="dropdown-menu text-lowercase gray-border clearfix cart-popup">
							{% if cartItem != '' %}
								<hr>
								{% for item in cartItem %}
									{% if item.main is not null %}
										<li style="text-align: center">
											<img src="{{ asset(item.main.photo) | imagine_filter('product') }}"/>
											<span>x{{ item.quantity }}</span>
											<span>{{ item.main.price }}euro</span>
										</li>
										<hr>
									{% else %}
										{% for photo in articlePhotos %}
											{% if item.articleTrans.article.id == photo.article.id %}
												<li style="text-align: center">
													<img src="{{ (asset('uploads/article/') ~ photo.file) | imagine_filter('product') }}"/>
													<span>x{{ item.quantity }}</span>
													<span>{{ item.articleTrans.article.price }}euro</span>
												</li>
												<hr>
											{% endif %}
										{% endfor %}
									{% endif %}
								{% endfor %}
							{% endif %}
						</ul>
					</li>
					<li class="dropdown-toggle nav-toggle" ><a class="scroll">{{ languageTitle }}<b data-toggle="dropdown"></b></a>
						<!-- DropDown Menu -->
						{# show from database language #}
						<ul class="dropdown-menu uppercase gray-border clearfix">
							{% for language in languages %}
								<li>
									<a href="{{ path('home', {cartId: cartId,locale: language.locale}) }}" class="ex-link">
										<img  src="{{ asset(language.photo)| imagine_filter('language') }}" alt=""/>
										{{ language.language }}
									</a>
								</li>
							{% endfor %}
						</ul>
						<!-- End DropDown Menu -->
					</li>
				</ul>
			</div><!-- End Navigation Menu -->
		</div><!-- End Navigation Inner -->
	</nav><!-- End Navigation -->



{% block body %}
	<!-- Home -->
	<section id="home" class="container relative" style="background-color: cornflowerblue">
		<div id="full-slider-wrapper">
			<div class="tp-banner-container">
				<div class="tp-banner">
					<ul>
						{% for photo in homePhotos %}
							<li  data-transition="random" data-slotamount="7" data-masterspeed="1000" >
								<img class=""
									 alt="slidebg1"
									 data-bgfit="cover"
									 data-bgposition="center "
									 data-bgrepeat="no-repeat"
									 src="{{ (asset('uploads/main_article/') ~ photo.file)| imagine_filter('home') }}"/>
							</li>

						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</section><!-- End Home Section -->




	<!-- About Section -->
	<section id="design" class="container" style="background-color: deepskyblue">
		<!-- About Inner -->
		<div class="inner about">
			<!-- Header -->
			<h1 class="header uppercase white oswald animated" data-animation="fadeIn" data-animation-delay="100">
				{{ design.smallTitle }}
			</h1>
			<h2 class="description white normal animated" data-animation="fadeIn" data-animation-delay="100">
				{{ design.description }}
{#				Magical design in your hand#}
{#				Inspired by the beauty and shape of running water in nature, the quadruple-curved overflow display is an innovation that dissolves all aspects of the barriers to vision and imagination.1 With a refresh rate of 90 Hz, you can truly enjoy immersive views across the smooth overflow screen. The middle frame and the protective curved corners convey the harmonious look to the feeling in your hand.#}
			</h2>
			<!-- Header Strip(s) -->

			<div class="member-image">
				{% for photo in designPhotos %}
					<img
						 src="{{ (asset('uploads/main_article/') ~ photo.file) | imagine_filter('design') }}"
						 alt="" class="responsive"/>
				{% endfor %}
			</div>
		</div><!-- End About Inner -->
	</section><!-- About Section -->






	<!-- What We Do Section -->
	<section id="photography" class="container " style="background-color: cornflowerblue">
		<!-- What We Do Inner -->
		<div class="inner what-we-do">
			<!-- Header -->
			<h1 class="header white uppercase oswald">
				{{ photography.smallTitle }}
			</h1>
			<!-- Header Strip(s) -->
			<div class="header-strips-one"></div>
			<!-- Header Description -->
			<h2 class="description white">

				{{ photography.description }}

			</h2>
			<hr>
			<div class="fullwidth relative t-center">
				<h2 class="uppercase">{{ allCameras.smallTitle }}</h2>
				<!-- Filters -->
				{% autoescape 'html' %}
					{{ allCameras.description|raw}}
				{% endautoescape %}

				<div class="w-second-area fullwidth clearfix">
					<!-- Left -->
					<div class="col-xs-6 w-left t-left no-padding animated" data-animation="fadeInLeft" data-animation-delay="0">
						<!-- Mini Header -->
						<h1 class="mini-header uppercase oswald white normal no-margin">
							{{ photographyDescription.smallTitle }}
						</h1>

						<!-- Description -->
						<p class="white normal" style="font-style: italic">
							{{ photographyDescription.description }}
{#							Introducing the main camera with Ultra Vision and the upgraded Artificial Intelligence algorithm - HUAWEI P40 Pro provides 45% 5 better analysis and segmentation of scenes and objects. With a pixel-level refinement, it restores the original look with great lighting, natural colors and clear details. Always be ready to take high quality portrait photos for everyone, anytime and in any setting.#}
						</p>
					</div>
					<!-- End Left -->

					<!-- Right -->
					<div class="col-xs-6 w-right t-right no-padding animated" data-animation="fadeInRight" data-animation-delay="0">
						<!-- Mac Image -->
						{% for photo in photographyDescriptionPhotos %}
							<img src="{{ (asset('uploads/main_article/') ~ photo.file) | imagine_filter('photography') }}" alt="North Preview"/>
						{% endfor %}
					</div>
					<!-- End Right -->

				</div><!-- End Second Area -->
			</div><!-- End Boxes Area -->
		</div><!-- End What We Do Inner -->
	</section><!-- End What We Do Section -->





	<section id="videography" class="container relative ">

		<div class="fullscreen soft-bg-1 z-1 "></div>

		<!-- Ful Screen Home -->
		<div id="fullscreen">

			<div id="P10" class="player video-container p-video-v" data-property="{videoURL:'{{ videography.description }}',containment:'#fullscreen',autoPlay:false, showControls:true, mute:false, startAt:0, opacity:1}"></div>
			<!-- End Video -->

			<!-- Home Elements v2 -->
			<div class="home-elements">
				<!-- Home Inner -->
				<div class="home-inner v2 t-center">
						<h1 class="uppercase" style="color: #0a0a0a">{{ videography.smallTitle }}</h1>
				</div><!-- End Home Inner -->
			</div><!-- End Home Elements -->
		</div>
		<!-- End Ful Screen Home -->
	</section><!-- End Home Section -->


	<section id="battery" class="container " style="background-color: deepskyblue">
		<!-- What We Do Inner -->
		<div class="inner what-we-do">
			<h1 class="header white uppercase oswald">
				{{ batteryTitle }}
			</h1>
			<div class="header-strips-one"></div>
			<!-- Header Description -->
			<div class="fullwidth relative t-center">
						<div class="w-second-area fullwidth clearfix">
