	<!-- Team Section -->
	<section id="gallery" class="container" style="background-color: cornflowerblue">
		<!-- Team Inner -->
		<div class="inner team">
			<!-- Header -->
			<h1 class="header uppercase white oswald">
				{{ galleryTitle }}
			</h1>
			<!-- Header Strip(s) -->
			<div class="header-strips-one"></div>



			<!-- Team Boxes -->
			<div class="team-boxes t-center">

				{% for photo in galleryPhotos %}
				<!-- Team Box -->
				<div class="item">
					<!-- Box Inner -->
					<div class="box-inner">
						<!-- Team Member Image -->
						<div class="member-image">
							<!-- Image -->
							<img src="{{ (asset('uploads/main_article/') ~ photo.file) | imagine_filter('gallery') }}" alt="Team Member" />
						</div>
					</div><!-- End Team Box Inner -->
				</div><!-- End Team Box -->

				{% endfor %}

			</div><!-- End Team Boxes -->
		</div><!-- End Team Inner -->
	</section>


	<!-- Accordion and Tabs -->
	<section id="products" class="container" style="background-color: deepskyblue">

		<!-- Inner -->
		<div class="inner clearfix">
			<!-- Header -->
			<h1 class="header uppercase white oswald">
				{{ productTitle }}
			</h1>
			<!-- Header Strip(s) -->
			<div class="header-strips-one"></div>
			<!-- Header Description -->

			<!-- Items -->
			<div class="items">

				<!-- Nav Tabs -->
				<div class="tabs left" >
					<!-- Navıgation -->
					<ul class="nav nav-tabs">
						<li class="active"><a href="#{{ mainArticle.slug }}" data-toggle="tab" class="uppercase oswald"  style="background-color: #0f3e68">{{ mainArticle.name }}</a></li>
						{% for article in articles %}
							<li><a href="#{{ article.article.slug }}" data-toggle="tab" class="uppercase oswald"  style="background-color: #0f3e68">{{ article.name }}</a></li>
						{% endfor %}
					</ul>
					<!-- Tab panes -->

					<div class="tab-content"   style="text-align: center">
						<div class="tab-pane fade in clearfix active" id="{{ mainArticle.slug }}">
							<!-- Left Icon -->
							<a class="tab-image">
								<img src="{{ asset(mainArticle.photo) | imagine_filter('product') }}" alt="">
							</a>
							<div style="text-align: right; font-style: italic; color: black">
								Price {{ mainArticle.price }} Euro
							</div>
							<hr>
							<form method="post" id="{{ mainArticle.slug }}">
								<div style="float: right">
									<label>Insert quantity</label>
									{% if mainArticle.quantity == 0 %}
										<input type="number" min="1"  name="productCount" placeholder="Exhausted" class="form-control-static" disabled>
										<input type="button" class="btn btn-primary" value="Add to cart" disabled>
									{% else %}
										<input type="number" min="1" id="productCount" name="productCount" class="form-control-static">
{#										<input type="number" name="main" class="form-control-static" value="1" hidden>#}
										<input type="submit" class="btn btn-primary" value="Add to cart">
									{% endif %}
								</div>
							</form>
						</div>
						{% for article in articles %}
							{% if article.article.id % 2 != 0 %}
								<!-- Tab -->
								<div class="tab-pane fade in clearfix" id="{{ article.article.slug }}">
									<!-- Left Icon -->
									<a class="tab-image">
										{% for photo in articlePhotos %}
											{% if photo.article.id == article.article.id %}
												<img src="{{ (asset('uploads/article/') ~ photo.file) | imagine_filter('product') }}" alt="">
											{% endif %}
										{% endfor %}
									</a>
									<!-- Nav Text -->
									<p class="tab-text" style="color: white">
										{{article.smallDescription}}
									</p>
									<div class="header-strips-one"></div>
									<p class="tab-text" style="color: white">
										{{article.description}}
									</p>
									<div class="header-strips-one"></div>
									<div style="text-align: right; font-style: italic; color: black">
										Price {{ article.article.price }} Euro
									</div>
									<hr>
									<form method="post" id="{{ article.article.slug }}" onsubmit="getForm(this)">
										<div style="float: right">
											<label>Insert quantity</label>
											{% if article.article.quantity == 0 %}
												<input type="number" min="1"  name="productCount" placeholder="Exhausted" class="form-control-static" disabled>
												<input type="button" class="btn btn-primary" value="Add to cart" disabled>
											{% else %}
												<input type="number" min="1" id="{{ article.article.slug }}Count" name="productCount" class="form-control-static">
												<input type="number" id="{{ article.article.slug }}Id" name="articleId" value="{{ article.article.id }}" class="form-control-static" hidden>
												<input type="submit" class="btn btn-primary" value="Add to cart">
											{% endif %}
										</div>
									</form>
									<div class="header-strips-one"></div>
									<h3 class="uppercase" style="text-align: center; color: white">{{ commentTitle }}</h3>
									<div class="clients t-center animated" data-animation="fadeIn" data-animation-delay="400">
										{% for comment in commentTrans %}
											{% if comment.comment.main is null and comment.comment.article.id == article.article.id %}
												<div class="item">
													<h1 class="client-name uppercase oswald" style="color: white">
														{{ comment.comment.name }}
													</h1>
													<!-- Client Position -->
													<h3 class="client-position uppercase">
														{% for i in range(comment.comment.rating, 1) %}
															<i class="fa fa-star" style="color: gold"></i>
														{% endfor %}
													</h3>
													<!-- Client Description -->
													<p class="client-desc" style="color: white">
														{{ comment.commentTrans }}
													</p>
												</div>
											{% endif %}
										{% endfor %}

									</div><!-- End Client Slider -->
								</div>
								<!-- End Tab -->
							{% else %}
								<!-- Tab -->
								<div class="tab-pane fade  clearfix" id="{{ article.article.slug }}">
									<!-- Right Icon -->
									<a class="tab-image right">
										{% for photo in articlePhotos %}
											{% if photo.article.id == article.article.id %}
												<img src="{{ (asset('uploads/article/') ~ photo.file) | imagine_filter('product') }}" alt="">
											{% endif %}
										{% endfor %}
									</a>
									<p class="tab-text" style="color: white">
										{{article.smallDescription}}
									</p>
									<div class="header-strips-one"></div>
									<p class="tab-text" style="color: white">
										{{article.description}}
									</p>
									<div class="header-strips-one"></div>
									<div style="text-align: right; font-style: italic; color: black">
										Price {{ article.article.price }} Euro
									</div>
									<hr>
									<form method="post" id="{{ article.article.slug }}" onsubmit="getForm(this)">
										<div style="float: right">
											<label>Insert quantity</label>
											{% if article.article.quantity == 0 %}
												<input type="number" min="1" name="productCount" placeholder="Exhausted" class="form-control-static" disabled>
												<input type="button" class="btn btn-primary" value="Add to cart" disabled>
											{% else %}
												<input type="number" min="1" id="{{ article.article.slug }}Count" name="productCount" class="form-control-static">
												<input type="number" id="{{ article.article.slug }}Id" name="articleId" value="{{ article.article.id }}" class="form-control-static" hidden>
												<input type="submit" class="btn btn-primary" value="Add to cart">
											{% endif %}
										</div>
									</form>
									<div class="header-strips-one"></div>
									<h3 class="uppercase" style="text-align: center; color: white">{{ commentTitle }}</h3>
									<div class="clients t-center animated" data-animation="fadeIn" data-animation-delay="400">
										{% for comment in commentTrans %}
											{% if comment.comment.main is null and comment.comment.article.id == article.article.id %}
												<div class="item" style="color: white">
													<h1 class="client-name uppercase oswald">
														{{ comment.comment.name }}
													</h1>
													<!-- Client Position -->
													<h3 class="client-position uppercase">
														{% for i in range(comment.comment.rating, 1) %}
															<i class="fa fa-star"></i>
														{% endfor %}
													</h3>
													<!-- Client Description -->
													<p class="client-desc" style="color: white">
														{{ comment.commentTrans }}
													</p>
												</div>
											{% endif %}
										{% endfor %}

									</div><!-- End Client Slider -->
								</div>
								<!-- End Tab -->
							{% endif %}
						{% endfor %}
					</div><!-- End Tab panes -->
				</div><!--End Tabs Left -->
			</div><!-- End Items -->
		</div><!-- End Inner -->
	</section><!-- End Accordions and Tabs -->




	<!-- Keep In Touch -->
	<section id="comments" class="container" style="background-color: cornflowerblue">

		<!-- Inner -->
		<div class="inner">
			<!-- Header -->
			<h1 class="header uppercase white oswald">
				{{ commentTitle }}
			</h1>
			<!-- Header Strip(s) -->
			<div class="header-strips-one"></div>


			<!-- Contact -->
			<div class="comments animated" data-animation="fadeIn" data-animation-delay="200">
				<!-- Contact Form -->
