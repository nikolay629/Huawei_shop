		var mainId = 0;
		var articleId = 0;
		var e = document.getElementById('cart');
		e.onmouseover = function (){
			cartPopup.style.display = 'block';

		}
		e.onmouseout = function () {
			cartPopup.style.display = 'none';
		}
		cartPopup.onmousemove = function () {
			cartPopup.style.display = 'block';
		}
		cartPopup.onmouseleave = function () {
			cartPopup.style.display = 'none';
		}

		$("#huawei_p40").submit(function (event) {
			event.preventDefault();
			var queryString = window.location.search;
			var urlParam = new URLSearchParams(queryString);
			var cartId = urlParam.get('cartId');
			var locale = urlParam.get('locale');
			var quantity = jQuery('#productCount').val();
			mainId = {{ mainArticle.id }};
			$.ajax({
				url: '{{ path('add_cart', {locale: language.locale}) }}',
				data: {
					mainId: mainId,
					quantity: quantity,
					cartId: cartId
				},
				type: 'POST'
			})
			.done(function (data) {
				window.history.replaceState(null, null, "?cartId="+ data.cartId + "&locale=" + data.locale);
				getCartItem(data.cartId);
			})
			.error(function (){
				alert("Sorry, but you can't add this product to cart!");
			})
		})

		function getForm(form) {
			$("#"+form.id).submit(function (event){
				event.preventDefault();
				var queryString = window.location.search;
				var urlParam = new URLSearchParams(queryString);
				var cartId = urlParam.get('cartId');
				var locale = urlParam.get('locale');

				articleId = $("#"+form.id+"Id").val();
				var quantity = $("#"+form.id+"Count").val();

				$.ajax({
					url: '{{ path('add_cart', {locale: language.locale}) }}',
					data: {
						articleId: articleId,
						quantity: quantity,
						cartId: cartId
					},
					type: 'POST'
				})
				.done(function (data) {
					window.history.replaceState(null, null, "?cartId="+ data.cartId + "&locale=" + data.locale);
					getCartItem(data.cartId);
				})
				.error(function (){
					alert("Sorry, but you can't add this product to cart!");
				})
			})
		}

		function continueWithShopping() {
			shoppingModal.style.display = 'none';
		}

		function gotoCart(){
			var queryString = window.location.search;
			var urlParam = new URLSearchParams(queryString);
			var cartId = urlParam.get('cartId');
			var locale = urlParam.get('locale');
			if(cartId != null){
				window.location = "{{ path('cart') }}" + "/?cartId=" + cartId + "&locale=" + locale;
			}
			else {
				window.location = "{{ path('home') }}";
			}
		}

		function getCartItem(cartId) {
			console.log(cartId);
			$.ajax({
				url: '{{ path('getCartItem') }}',
				data: {
					cartId: cartId,
					mainId: mainId,
					articleId: articleId
				},
				type: 'POST'
			})
			.done(function (data){
				var product_photo =  data.image;
				var product_quantity = data.quantity;
				var product_price = data.price;
				// console.log(product_photo);
				// console.log(product_quantity);
				// console.log(product_price);
				showCurrentProduct(product_photo, product_quantity, product_price);
			})
			.error(function () {
				alert("ERRROORR");
			})
		}

		function showCurrentProduct(product_photo, product_quantity, product_price) {
			var shoppingContentText = "";
			var cartPopupText = "";
			if(mainId !== 0) {
				cartPopupText = "<li style=\"text-align: center\">" +
