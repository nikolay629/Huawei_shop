{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    <style>
        /*.container {*/
        /*    text-align: center;*/
        /*}*/
        .text-italic{
            font-family: "Engravers MT";
            font-style: italic;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row jumbotron">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-italic">{{ article.slug }}</h3>
                    <a href="{{ path("article_translation_createEdit", {articleId: article.id}) }}"
                       class="btn btn-primary"
                       style="float: right; color: white">
                        <i class="fa fa-plus"></i> Create
                    </a>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Language</th>
                            <th>Name</th>
                            <th>Small Description</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ article.language.language }}</td>
                                <td>{{ article.name }}</td>
                                <td style="white-space:pre-wrap; word-wrap:break-word">{{ article.smallDescription }}</td>
                                <td style="white-space:pre-wrap; word-wrap:break-word">{{ article.description}}</td>
                                <td><a class="btn btn-info" href="{{ path("article_translation_createEdit", {articleId: article.article.id, articleTransId: article.id}) }}">Edit</a></td>
                                <td>
                                    <a class="btn btn-danger"
                                       href="{{ path('article_translation_delete',
                                           {articleId: article.article.id,
                                           articleTransId: article.id}) }}"
                                            onclick="return confirm('Are you sure?')">Delete
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{#    <input type="hidden" class="form-control" name="id" value="{{ articleId }}">#}
{% endblock %}