{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    <style>
        .text-italic{
            font-family: "Engravers MT";
            font-style: italic;
        }
    </style>
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="container jumbotron">
        <div class="row">
            <div class="card-body">
                <div class="row" style="text-align: center">
                    <div class="form-group col">
                        <h2 class="text-italic">Add description in "{{ page.title }}" page</h2>
                    </div>
                </div>
                <div class="form-group col">
                    {{ form_row(form.subpage) }}
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align: center">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}