{% extends "admin/base.html.twig" %}
{% block stylesheets %}
    <style>
        .text-italic{
            font-family: "Engravers MT";
            font-style: italic;
        }
    </style>
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="container jumbotron">
        <div class="row">
            <div class="card-body">
                <div class="row" style="text-align: center">
                    <div class="form-group col">
                        <h2 class="text-italic">{{ pageList.subpage }}</h2>
                    </div>
                </div>
                <div class="col">
                    {{ form_row(form.locale)}}
                </div>
                <div class="col">
                    {{ form_row(form.smallTitle) }}
                </div>
                <div id="froala-editor" class="form-group col fr-view">
                    {{ froala_display(form_row(form.description)) }}
                </div>
            </div>

        </div>
        <div class="card-footer" style="text-align: center">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

