{% extends 'admin/base.html.twig' %}

{% block title %} Translation Pages {% endblock %}


{% block stylesheets %}
    <style>
        .text-italic{
            font-family: "Engravers MT";
            font-style: italic;
        }
    </style>
{% endblock %}
{% block body %}

<div class="row jumbotron">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                {#                    <h3 class="card-title text-italic">{{ mainArticle.name }}</h3>#}
                <h3 class="card-title text-italic">{{ pageList.subpage }}</h3>
                <a href="{{ path('main_translation_create', {id: pageList.id}) }}"
                   class="btn btn-primary"
                   style="float: right; color: white">
                    <i class="fa fa-plus"></i> Create
                </a>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                    <tr>
                        <th>Language</th>
                        <th>Small Title</th>
                        <th>Description</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for page in pageTrans %}
                            <tr>
                                <td>{{ page.locale.language }}</td>
                                <td>{{ page.smallTitle }}</td>
                                <td style="white-space:pre-wrap; word-wrap:break-word">{{ page.description }}</td>
                                <td ><a class="btn btn-info" href="{{ path('main_translation_edit', {pageListId: page.pageList.id, id: page.id}) }}">Edit</a></td>
                                <td >
                                    <a class="btn btn-danger"
                                        href="{{ path('main_translation_delete',
                                            {pageListId: page.pageList.id,id: page.id}) }}"
                                        onclick="return confirm('Are you sure?')">Delete
                                    </a>
                                </td>
                            </tr>

                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
